{% extends 'backoffice.html.twig' %}

{% block title %}Axes stratégiques d'intervention{% endblock %}

{% block body %}
<div class="pageheader">
  <h3><i class="fa fa-home"></i>  axe</h3>
  <div class="breadcrumb-wrapper">
    <span class="label"></span>
    <ol class="breadcrumb">
      <li><a href="#">Accueil</a></li>
      <li><a href="#">Intervention</a></li>
      <li class="active">Axes</li>
    </ol>
  </div>
</div>

<div id="page-content">

  <br>
    <!-- Message -->
      {% for flash_message in app.session.flashBag.get('notice') %}
        {% if flash_message %}
        <div class="row">
          <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
            <div class="alert alert-info media fade in">
              <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
              <div class="media-left">
                <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                  <i class="fa fa-check fa-lg"></i>
                </span>
              </div>
              <div class="media-body">
                <p></p>
                  <h4 class="alert-title" style="color: green">
                    {{ flash_message }}
                  </h4>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      {% endfor %}
      <!-- \Message -->
      <br>

  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="panel">
        <div class="btn-toolbar pad-all">
          <div class="btn-group">
            <a href="{{ path('admin_axe_new') }}">
            <button class="btn btn-sm btn-default" type="button">
              <i class="fa fa-plus"></i>
            </button>
            </a>
          </div>
        </div>
        <div class="panel-body">
          <div id="demo-acc-faq" class="panel-group accordion">
            {% for axe in axes %}
            <div class="panel">
                <div class="text-semibold pad-hor">
                    <a href="#demo-acc-faq{{ axe.id }}" data-toggle="collapse" data-parent="#demo-acc-faq">
                    <h3> {{ axe.intitule }}</h3>
                    </a>
                    <p> Par {{ axe.publiePar|capitalize }}
                      <i class="fa fa-clock-o"></i> {{ axe.publieLe|date('d-m-Y H:i:s')}}
                    </p>
                </div>
                <!-- Answer -->
                <div id="demo-acc-faq{{ axe.id }}" class="collapse">
                    <div class="pad-all">
                      {{ axe.description|raw }}
                      <div class="btn-toolbar pad-all">
                        <div class="btn-group">
                          <a href="{{ path('admin_axe_edit', { 'slug': axe.slug }) }}" title="Modifier">
                          <button class="btn btn-sm btn-default" type="button">
                            <i class="fa fa-edit"></i>
                          </button>
                          </a>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
{% endblock %}
