{% extends 'backoffice.html.twig' %}

{% block title %}{{ eleve.nom|upper }} {{ eleve.prenom|title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.css')}}" rel="stylesheet">
<link href="{{ asset('backoffice/plugins/dropzone/dropzone.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}
<div class="pageheader">
  <h3><i class="fa fa-home"></i>  Parrain </h3>
  <div class="breadcrumb-wrapper">
    <span class="label"></span>
    <ol class="breadcrumb">
      <li><a href="#">Accueil</a></li>
      <li class="active">Parrain</li>
    </ol>
  </div>
</div>

<div id="page-content">


      <br>
        <!-- Message -->
          {% for flash_message in app.session.flashBag.get('notice') %}
            {% if flash_message %}
            <div class="row">
              <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                <div class="alert alert-info media fade in">
                  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                  <div class="media-left">
                    <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                      <i class="fa fa-check fa-lg"></i>
                    </span>
                  </div>
                  <div class="media-body">
                    <p></p>
                      <h4 class="alert-title" style="color: green">
                        {{ flash_message }}
                      </h4>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
          {% endfor %}
          <!-- \Message -->
          <br>

          <div class="row">
            <div class="col-sm-12 col-sm-offset-0">
              <div class="panel">
                <div class="panel-heading">
                  <h3 class="panel-title">Modification</h3>
                </div>
                {{ form_start(edit_form, { 'attr': {'class': 'form-vertical', 'id': 'regionForm' }}) }}

                  <div class="panel-body">
                    <div class="row">
                      <div class="col-xs-3 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Nom</label>
                          {{ form_widget(edit_form.nom) }}
                          {{ form_errors(edit_form.nom) }}
                        </div>
                      </div>
                      <div class="col-xs-4 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Prenoms</label>
                          {{ form_widget(edit_form.prenom) }}
                          {{ form_errors(edit_form.prenom) }}
                        </div>
                      </div>
                      <div class="col-xs-3 col-xs-offset-0 text-left">
                        {% if (eleve.imageName) %}
                          <img alt="Profile Picture" class="widget-img img-border-light" src="{{ vich_uploader_asset(eleve, 'imageFile') }}">
                        {% else %}
                          <img alt="Profile Picture" class="widget-img img-border-light" src="{{ asset('backoffice/img/avatar.png')}}">
                        {% endif %}
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-3 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Date de naissance</label>
                          {{ form_widget(edit_form.datenaissance) }}
                          {{ form_errors(edit_form.datenaissance) }}
                        </div>
                      </div>
                      <div class="col-xs-4 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Lieu de naissance</label>
                          {{ form_widget(edit_form.lieunaissance) }}
                          {{ form_errors(edit_form.lieunaissance) }}
                        </div>
                      </div>
                      <div class="col-xs-3 col-xs-offset-0">
                        <div class="form-group">
                          {{ form_widget(edit_form.imageFile) }}
                          {{ form_errors(edit_form.imageFile) }}
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-2 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Sexe</label>
                          {{ form_widget(edit_form.sexe) }}
                          {{ form_errors(edit_form.sexe) }}
                        </div>
                      </div>
                      <div class="col-xs-3 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Domicile</label>
                          {{ form_widget(edit_form.domicile) }}
                          {{ form_errors(edit_form.domicile) }}
                        </div>
                      </div>
                      <div class="col-xs-4 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Parrain</label>
                          {{ form_widget(edit_form.parrain) }}
                          {{ form_errors(edit_form.parrain) }}
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="panel-footer">
                    <div class="row">
                      <div class="col-sm-7 col-sm-offset-3 text-right">
                        <a href="{{ path('admin_eleve_index')}}" class="btn btn-default" type="reset">Annuler</a>
                        <button class="btn btn-primary" type="submit">Modifier</button>
                      </div>
                    </div>
                  {{ form_end(edit_form)}}
                  </div>
              </div>
            </div>
          </div>
          <form action="#">

                                        </form>

</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.js')}}"></script>
<script src="{{ asset('backoffice/js/sygesca-form-validation.js')}}"></script>
<script src="{{ asset('backoffice/vendor/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
<script src="{{ asset('backoffice/plugins/dropzone/dropzone.min.js') }}" type="text/javascript"></script>
{% endblock %}
