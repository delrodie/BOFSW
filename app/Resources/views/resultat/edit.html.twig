{% extends 'backoffice.html.twig' %}

{% block title %} Resultat {{ resultat.eleve|upper }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.css')}}" rel="stylesheet">
<link href="{{ asset('backoffice/plugins/dropzone/dropzone.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}
<div class="pageheader">
  <h3><i class="fa fa-home"></i>  Eleve </h3>
  <div class="breadcrumb-wrapper">
    <span class="label"></span>
    <ol class="breadcrumb">
      <li><a href="#">Accueil</a></li>
      <li class="active">Eleve</li>
    </ol>
  </div>
</div>

<div id="page-content">


      <br>
        <!-- Message -->
          {% for flash_message in app.session.flashBag.get('notice') %}
            {% if flash_message %}
            <div class="row">
              <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                <div class="alert alert-info media fade in">
                  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                  <div class="media-left">
                    <span class="icon-wrap icon-wrap-xs icon-circle alert-icon">
                      <i class="fa fa-check fa-lg"></i>
                    </span>
                  </div>
                  <div class="media-body">
                    <p></p>
                      <h4 class="alert-title" style="color: green">
                        {{ flash_message }}
                      </h4>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
          {% endfor %}
          <!-- \Message -->
          <br>

          <div class="row">
            <div class="col-sm-12 col-sm-offset-0">
              <div class="panel">
                <div class="panel-heading">
                  <h3 class="panel-title">Modification</h3>
                </div>
                {{ form_start(edit_form, { 'attr': {'class': 'form-vertical', 'id': 'regionForm' }}) }}

                  <div class="panel-body">
                    <div class="row">
                      <div class="col-xs-2 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Annee scolaire</label>
                          {{ form_widget(edit_form.annee) }}
                          {{ form_errors(edit_form.annee) }}
                        </div>
                      </div>
                      <div class="col-xs-2 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Classe</label>
                          {{ form_widget(edit_form.classe) }}
                          {{ form_errors(edit_form.classe) }}
                        </div>
                      </div>
                      <div class="col-xs-3 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Periode</label>
                          {{ form_widget(edit_form.periode) }}
                          {{ form_errors(edit_form.periode) }}
                        </div>
                      </div>
                      <div class="col-xs-3 col-xs-offset-0 text-right">
                        {% if (resultat.imageName) %}
                          <a href="{{ vich_uploader_asset(resultat, 'imageFile') }}" target="_blank">
                            <i class="fa fa-file-text-o fa-3x"></i>
                          </a>
                        {% else %}
                          <i class="fa fa-exclamation-circle fa-3x"></i>
                        {% endif %}
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-xs-1 col-xs-offset-1">
                        <div class="form-group">
                          <label class="control-label">Rang</label>
                          {{ form_widget(edit_form.rang) }}
                          {{ form_errors(edit_form.rang) }}
                        </div>
                      </div>
                      <div class="col-xs-3 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Moyenne</label>
                          {{ form_widget(edit_form.moyenne) }}
                          {{ form_errors(edit_form.moyenne) }}
                        </div>
                      </div>
                      <div class="col-xs-4 col-xs-offset-0">
                        <div class="form-group">
                          <label class="control-label">Observation</label>
                          {{ form_widget(edit_form.observation) }}
                          {{ form_errors(edit_form.observation) }}
                        </div>
                      </div>
                      <div class="col-xs-3 col-xs-offset-0">
                        <div class="form-group">
                          {{ form_widget(edit_form.imageFile) }}
                          {{ form_errors(edit_form.imageFile) }}
                        </div>
                      </div>
                    </div>

                  </div>
                  <div class="panel-footer">
                    <div class="row">
                      <div class="col-sm-7 col-sm-offset-3 text-right">
                        <a href="{{ path('admin_eleve_index')}}" class="btn btn-default" type="reset">Annuler</a>
                        <button class="btn btn-primary" type="submit">Modifier</button>
                      </div>
                    </div>
                  {{ form_end(edit_form)}}
                  </div>
              </div>
            </div>
          </div>

</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('backoffice/plugins/bootstrap-validator/bootstrapValidator.min.js')}}"></script>
<script src="{{ asset('backoffice/js/sygesca-form-validation.js')}}"></script>
<script src="{{ asset('backoffice/vendor/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
<script src="{{ asset('backoffice/plugins/dropzone/dropzone.min.js') }}" type="text/javascript"></script>
{% endblock %}
